{
  "name": "react-native-maui",
  "version": "0.1.3",
  "description": "React Native UI Library",
  "main": "src/index",
  "scripts": {
    "expo-publish": "cd example && expo publish",
    "npm-publish": "./script/npm-publish.sh",
    "test": "jest",
    "testc": "jest --coverage",
    "testu": "jest --updateSnapshot",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lintfix": "eslint ./src --ext .ts,.tsx --fix",
    "release:patch": "npm version patch -m 'chore: bump version to %s' && git push origin main --follow-tags",
    "release:minor": "npm version minor -m 'chore: bump version to %s' && git push origin main --follow-tags",
    "release:major": "npm version major -m 'chore: bump version to %s' && git push origin main --follow-tags",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "files": [
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/config-conventional": "^19.5.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^12.6.1",
    "@types/jest": "^29.5.12",
    "@types/react": "18.2.6",
    "@types/react-native": "0.73.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "commitlint": "^19.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "jest-expo": "^51.0.4",
    "lint-staged": "^15.2.10",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.75.2",
    "react-native-gesture-handler": "~2.19.0",
    "react-native-reanimated": "~3.15.1",
    "react-native-svg": "15.6.0",
    "typescript": "~5.6.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.60.0",
    "react-native-gesture-handler": ">= 2.0.0",
    "react-native-reanimated": ">=2.0.0",
    "react-native-svg": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahaaoo/react-native-maui.git"
  },
  "author": "mahaaoo <mahao9393@163.com> (https://github.com/mahaaoo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mahaaoo/react-native-maui/issues"
  },
  "homepage": "https://github.com/mahaaoo/react-native-maui#readme",
  "setupFilesAfterEnv": [
    "@testing-library/jest-native/extend-expect"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "example/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
